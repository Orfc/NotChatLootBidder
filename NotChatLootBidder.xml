  <Anchors><Anchor point="TOP"><Offset><AbsDimension x="0" y="-64"/></Offset></Anchor></Anchors>
  <Frames>
    <Frame name="$parentPlacement" inherits="BidFrameTemplate" hidden="true">
    <Scripts>
      <OnLoad>
        this:RegisterForDrag("LeftButton")
        this.itemLinkInfo = "item:35::::::::60:::::"
      </OnLoad>
      <OnHide>
        this:StopMovingOrSizing()
      </OnHide>
      <OnDragStart>
        if arg1 == "LeftButton" then
          this:SetMovable(true)
          this:StartMoving()
        end
      </OnDragStart>
      <OnDragStop>
        this:StopMovingOrSizing()
        this:GetParent():ClearAllPoints()
        local point, _, relativePoint, xOfs, yOfs = this:GetPoint()
        this:GetParent():SetPoint(point, "UIParent", relativePoint, xOfs, yOfs)
      </OnDragStop>
      <OnMouseUp>
        if arg1 == "LeftButton" and this:IsVisible() then
          this:StopMovingOrSizing()
          this:SetMovable(false)
        end
      </OnMouseUp>
    </Scripts>
    </Frame>
  </Frames>
   <Scripts>
    <OnEvent>
      this[event](arg1,arg2,arg3,arg4)
    </OnEvent>
    <OnLoad>
      this:RegisterEvent("ADDON_LOADED")
      this:RegisterEvent("CHAT_MSG_ADDON")
      this:RegisterEvent("PLAYER_ENTERING_WORLD")
      this:RegisterEvent("PLAYER_LEAVING_WORLD")
      this:RegisterEvent("PARTY_MEMBERS_CHANGED")
      this:RegisterEvent("UI_SCALE_CHANGED")
    </OnLoad>
